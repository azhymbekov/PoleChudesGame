@model GameProject.Service.Common.WordService.Models.WordModel

<form asp-action="Create">
    <div class="row">
        <input asp-for="@Model.Id" type="hidden" />
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Question" class="control-label">Введите вопрос</label>
                <input asp-for="Question" class="form-control" />
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecretWord" class="control-label">Введите ответ</label>
                <input asp-for="SecretWord" class="form-control" />
                <span asp-validation-for="SecretWord" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" onclick="save()" />

    </div>
</form>

